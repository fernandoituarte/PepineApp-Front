{
  "compilerOptions": {
    "types": [],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/auth.config.js",
    "jest.setup.js",
    "src/app/layout.jsx",
    "src/hooks/useUpdateUserPassword.js",
    "src/hooks/redux.js",
    "src/validations/schemas.js",
    "src/app/(account)/components/change-password/ChangePassword.jsx",
    "src/components/ui/title/Title.jsx",
    "src/app/(account)/admin/change-password/page.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
